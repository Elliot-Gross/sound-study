{
  "name": "Notes",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Title of the study material"
    },
    "subject": {
      "type": "string",
      "enum": [
        "math",
        "science",
        "history",
        "language",
        "literature",
        "geography",
        "chemistry",
        "biology",
        "physics",
        "other"
      ],
      "description": "Subject category"
    },
    "raw_content_ref": {
      "type": "string",
      "description": "Reference to raw uploaded content"
    },
    "cleaned_text": {
      "type": "string",
      "description": "Processed and cleaned content"
    },
    "topic_tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Key topics and concepts detected"
    },
    "complexity_level": {
      "type": "string",
      "enum": [
        "simple",
        "intermediate",
        "advanced"
      ],
      "default": "intermediate"
    },
    "ocr_confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "OCR confidence score"
    },
    "songability_score": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "How suitable for song conversion"
    }
  },
  "required": [
    "title",
    "subject",
    "cleaned_text"
  ]
}