{
  "name": "Quiz",
  "type": "object",
  "properties": {
    "song_id": {
      "type": "string",
      "description": "Reference to the associated song"
    },
    "title": {
      "type": "string",
      "description": "Quiz title"
    },
    "scheduled_at": {
      "type": "string",
      "format": "date-time",
      "description": "When this quiz should be taken"
    },
    "delivered_via": {
      "type": "string",
      "enum": [
        "push",
        "email",
        "web"
      ],
      "default": "web"
    },
    "completed_at": {
      "type": "string",
      "format": "date-time",
      "description": "When the quiz was completed"
    },
    "score_pct": {
      "type": "number",
      "minimum": 0,
      "maximum": 100
    },
    "confidence_avg": {
      "type": "number",
      "minimum": 1,
      "maximum": 5,
      "description": "Average confidence rating"
    },
    "questions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "recall",
              "multiple_choice",
              "cloze"
            ]
          },
          "prompt_text": {
            "type": "string"
          },
          "correct_answer": {
            "type": "string"
          },
          "distractors": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "user_answer": {
            "type": "string"
          },
          "result": {
            "type": "string",
            "enum": [
              "correct",
              "incorrect"
            ]
          },
          "confidence": {
            "type": "number",
            "minimum": 1,
            "maximum": 5
          },
          "latency_ms": {
            "type": "number"
          }
        }
      }
    },
    "review_interval_days": {
      "type": "number",
      "default": 7,
      "description": "Days until next review"
    }
  },
  "required": [
    "song_id",
    "title"
  ]
}